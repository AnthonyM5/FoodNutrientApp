
<%= form_tag foods_path, method: :get %>
<%= label_tag "Search Foods" %>
<%= text_field_tag :query %>
<%= select_tag "sort_options", 
raw("
<option>Carbs</option>
<option>Calories</option>
<option>Cholesterol</option>
<option>Fiber</option>
<option>Glucose</option>
<option>Iron</option>
<option>Protein</option>
<option>Selenium</option>
<option>Saturated fat</option>
<option>Starch</option>
<option>Total Sugar</option>
<option>Water</option>
<option>Zinc</option>
")%>
<%= submit_tag "Search" %>
<h3 class='py--5 text-center'>Portion: 100g</h3>
<p><% @foods.each do |food| %>
<p><%= food.id %>: 
<%= link_to "#{food.name}" , food_path(food.id) %> 
 <% end %></p>



