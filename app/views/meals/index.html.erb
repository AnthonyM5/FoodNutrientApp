
<div class="d-flex justify-content-start"><h1>My Meals</h1></div>

 <table class="table">
  <thead>
    <tr>
      <th scope="col">Meal ID#</th>
      <th scope="col">Meal Name:</th>
      <th scope="col"># of Ingredients</th>
      <th scope="col"># of Users</th>
      <th scope="col"># of Comments</th>
      <th scope="col">Created:</th>
    </tr>
  </thead>
<tbody>
<% @meals.each do |meal| %>
<tr>
<th scope="row"><%= meal.id %></p></th>
<td><%= link_to "#{meal.name}", meal_path(meal.id) %></td>
 <td> <%= meal.meal_foods.count %></td>
 <td> <%= meal.comments_count %>
 <td><%= meal.created_at.strftime("%m/%d/%y At: %H:%M ") %></td>
 <td><%= button_to "Delete", meal_path(meal.id), method: "delete" %></td>
 </tr>
 <% end %>
 </tbody>
</table>
 <%= button_to "Create a New Meal", new_meal_path, method: "get" %>
<br>
<div class="d-flex justify-content-start"><h1>Meal's I've Commented On</h1></div>
  <table class="table">
  <thead>
    <tr>
      <th scope="col">Meal ID#</th>
      <th scope="col">Meal Name:</th>
      <th scope="col"># of Ingredients</th>
      <th scope="col"># of Comments</th>
      <th scope="col">Created:</th>
    </tr>
  </thead>
<tbody>
<% current_user.saved_meals.each do |meal| %>
<tr>
<th scope="row"><%= meal.id %></p></th>
<td><%= link_to "#{meal.name}", meal_path(meal.id) %></td>
 <td> <%= meal.meal_foods.count %></td>
 <td> <%= meal.users.uniq.count %>
 <td> <%= meal.comments_count %>
 <td><%= meal.created_at.strftime("%m/%d/%y At: %H:%M ") %></td>
 </tr>
 <% end %>
 </tbody>
</table>